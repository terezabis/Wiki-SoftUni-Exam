<section>
    <h2>All articles</h2>
    <div class="spacer">
        {{#if articles}}
        <ul>
            {{#each articles}}
            <li>
                <a href="/articles/article/{{_id}}">{{title}}</a>
            </li>
            {{/each}}
        </ul>
        {{/if}}
    </div>
</section>