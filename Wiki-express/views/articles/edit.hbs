<section>
    <h2>Edit article 
        {{#if isAdmin}}
        <div class="controls">
            {{#if edit.article.lockedStatus}}
            <form id="unlock-form" action="/unlock" method="post">
            <input name="articleId" type="text" value="{{edit.article._id}}" style="display: none"/>
            </form>
            <a href="javascript:document.getElementById('unlock-form').submit()">[Unlock article]</a>
            {{else}}
            <form id="lock-form" action="/lock" method="post">
            <input name="articleId" type="text" value="{{edit.article._id}}" style="display: none"/>
            </form>
            <a href="javascript:document.getElementById('lock-form').submit()">[Lock article]</a>
            {{/if}}
        </div>
        {{/if}}
    </h2>
    <div class="spacer">
        <form method="post">
            <label>Article title</label>
            <h3>{{edit.article.title}}</h3>
            <label>Content</label>
            <textarea name="content">{{edit.content}}</textarea> 
            <input type="submit" value="Submit"> 

        </form>
    </div>
</section>